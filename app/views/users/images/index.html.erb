<h4 class="d-flex justify-content-between">
  <span>Images</span>
  <%= link_to 'New Image', new_image_path, class: "btn btn-primary" %>
</h4>

<% @images.each do |image| %>
  <%= link_to edit_image_path(image), class: "text-decoration-none" do %>
    <div class="card mb-3">
      <img class="card-img-top" alt="Your image" src=<%= url_for(image.upload)%>>
      <div class="card-body">
        <h5 class="card-title mb-1 text-dark"><%= image.likes.count %> <%= (image.likes.count) == 1 ? 'Like' : 'Likes'%></h5>
        <p class="text-secondary mb-0"><%= image.description %></p>
      </div>
    </div>
  <% end %>
<% end %>